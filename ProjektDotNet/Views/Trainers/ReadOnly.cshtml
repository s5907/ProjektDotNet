@model IEnumerable<ProjektDotNet.Models.Player>


@{
    ViewBag.Title = "Trainers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trenerzy</h2>


<table id="trainers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Zawodnik</th>
            <th>Dyscyplina</th>
            <th>Klub</th>
            <th>Trener</th>
            
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#trainers").DataTable({
                ajax: {
                    url: "/api/trainers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "sportType.name"
                    },
                    {
                        data: "sportType.club"
                    },

                    {
                        data: "sportType.coach"
                    },
                    
                ]
            });
        });
    </script>
}
